<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User List</title>
    <style>
      /* Add some CSS to style the list */
      ul {
        list-style-type: disc; /* Use bullets for list items */
        padding-left: 20px; /* Add some padding to the left for better readability */
      }
      li {
        margin-bottom: 10px; /* Add some margin between each user */
      }
      form {
        display: inline; /* Display forms inline */
      }
    </style>
  </head>
  <body>
    <h1>User List</h1>
    <ul>
      <% users.forEach(user => { %>
      <li>
        <%= user.first_name %> <%= user.last_name %> (Username: <%=
        user.username %>, Email: <%= user.email %>, Age: <%= user.age %>)
        <form action="/users/<%= user.id %>" method="post">
          <input type="hidden" name="_method" value="DELETE" />
          <button type="submit">Delete</button>
        </form>
        <a href="/users/<%= user.id %>/edit">Edit</a>
      </li>
      <% }); %>
    </ul>
    <a href="/users/new">Add User</a>
  </body>
</html>
